<% if @book.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@book.errors.count, "error") %> prohibited
    this article from being saved:
  </h2>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_for @book do |f| %>
<div id="book-form" class="row">
  

  <div class="col">
    <td><%= link_to '"To Read" List', books_path %></td>
    <br>
    <br>
    <br>
    <div class="row">
      <div class="form-group col-sm-5">
        <%= f.label :title, 'Book Title' %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group col-sm-5">
        <%= f.label :author, 'Author' %><br>
        <%= f.text_area :author, class: "form-control text-area" %>
      </div>
      <div class="form-group col-sm-5">
        <%= f.label :description, 'Description' %><br>
        <%= f.text_area :description, class: "form-control text-area" %>
      </div>
      <div class="form-group col-sm-5">
        <%= f.label :progress, 'Progress Note' %><br>
        <%= f.text_area :progress, class: "form-control text-area" %>
      </div>
      
      
    </div>

    <%= f.submit 'Submit', class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<script>

  var dynamicImage = new Vue({
    el: '#book-form',
    methods: {
      updateImage(e) {
        this.userImage = e.target.value
        this.invalidImage = false;
      },
      handleInvalidImage() {
        this.invalidImage = true;
        this.userImage = this.defaultImage;
      }
    }
  })

</script>